div#login.modal.hide
    div.modal-header
        h3 spotinode
    form
        div.modal-body
            div.input-prepend.control-group.pull-left
                span.add-on
                    i.icon-font
                input(placeholder='Name', name='name', type='text', tabindex='1')
            div.input-prepend.control-group.pull-right
                span.add-on
                    i.icon-lock
                input(placeholder='Passwort', name='password', type='password', tabindex='2')
        div.modal-footer
            button.btn.btn-primary(data-dismiss='modal', tabindex='3') Login
